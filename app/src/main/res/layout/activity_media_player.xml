<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mediaPlayerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".MediaPlayerActivity">

    <ImageView
        android:id="@+id/bookView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/books_0008" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/songName"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bookView"
        android:layout_marginBottom="256dp"
        android:text="A Game of Thrones:"
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/songDetail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bookView"
        android:layout_marginBottom="223dp"
        android:text="Book 1 of A Song of Ice and Fire"
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/songDetail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bookView"
        android:layout_marginBottom="183dp"
        android:text="Chapter 3"
        android:textColor="@color/colorBlack"
        android:textSize="11dp" />

    <ImageButton
        android:id="@+id/forwardButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/bookView"
        android:layout_alignTop="@+id/backwardButton"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ahead" />

    <ImageButton
        android:id="@+id/backwardButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bookView"
        android:layout_marginBottom="54dp"
        android:background="@null"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/back" />

    <ImageButton
        android:id="@+id/playPauseButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/forwardButton"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/pause" />

</RelativeLayout>